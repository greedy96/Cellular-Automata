<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="mainView" alignment="center" hgap="10" stylesheets="@styles.css" vgap="10"
          xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="sample.Controller">
    <children>
        <SplitPane fx:id="splitPane" dividerPositions="0.75, 0.5">
            <items>
                <AnchorPane styleClass="boardPane">
                    <children>
                        <ScrollPane styleClass="boardPane">
                            <content>
                                <AnchorPane fx:id="boardView" styleClass="boardView"/>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="activeControlPane" minHeight="0.0" minWidth="0.0" prefHeight="600.0"
                            prefWidth="200.0">
                    <children>
                        <Button layoutX="126.0" layoutY="349.0" mnemonicParsing="false" onAction="#generateNextStep"
                                text="Next"/>
                        <Button layoutX="13.0" layoutY="349.0" mnemonicParsing="false" onAction="#getPreviousStep"
                                text="Previous"/>
                        <Button layoutX="126.0" layoutY="549.0" mnemonicParsing="false" onAction="#playAuto"
                                text="Auto"/>
                        <Button layoutX="13.0" layoutY="549.0" mnemonicParsing="false" onAction="#pauseAuto"
                                text="Pause"/>
                        <Button layoutX="81.0" layoutY="428.0" mnemonicParsing="false" onAction="#goBack" text="Reset"/>
                        <Button layoutX="59.0" layoutY="190.0" mnemonicParsing="false" onAction="#saveToFile"
                                text="Save to file"/>
                        <Button layoutX="48.0" layoutY="269.0" mnemonicParsing="false" onAction="#saveAsImage"
                                text="Save as image"/>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="controlPane" minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="200.0">
                    <children>
                        <TextField fx:id="rowsTextField" layoutX="12.0" layoutY="49.0"/>
                        <TextField fx:id="columnsTextField" layoutX="12.0" layoutY="114.0"/>
                        <TextField fx:id="numberOfSeeds" layoutX="12.0" layoutY="177.0"/>
                        <ComboBox fx:id="neighbourhood" layoutX="26.0" layoutY="244.0" prefWidth="150.0"/>
                        <RadioButton fx:id="nonPeriodicBoundary" layoutX="14.0" layoutY="343.0" mnemonicParsing="false"
                                     text="Non-periodic boundary"/>
                        <RadioButton fx:id="periodicBoundary" layoutX="14.0" layoutY="318.0" mnemonicParsing="false"
                                     text="Periodic boundary"/>
                        <Button layoutX="58.0" layoutY="428.0" mnemonicParsing="false" onAction="#generateBoard"
                                text="Generate"/>
                        <Button layoutX="35.0" layoutY="498.0" mnemonicParsing="false" onAction="#openFile"
                                text="Import from file"/>
                        <Label layoutX="15.0" layoutY="24.0" text="Rows:"/>
                        <Label layoutX="15.0" layoutY="89.0" text="Columns:"/>
                        <Label layoutX="15.0" layoutY="151.0" text="Number of seeds:"/>
                        <Label layoutX="40.0" layoutY="219.0" text="Neighbourhood:"/>
                        <Label layoutX="19.0" layoutY="293.0" text="Boundary condition:"/>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
